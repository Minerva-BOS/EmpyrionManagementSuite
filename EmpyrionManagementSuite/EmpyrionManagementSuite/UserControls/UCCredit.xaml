<UserControl x:Class="EmpyrionManagementSuite.UserControls.UCCredit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EmpyrionManagementSuite.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="120"
             d:DesignWidth="450"
             Height="120"
             Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Border BorderBrush="{StaticResource AppThemeForeground}" BorderThickness="1" Margin="0,0,0,12">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                    <TextBlock TextAlignment="Center" Text="{Binding Name}" Style="{StaticResource HeaderOne}" />
                    <TextBlock TextAlignment="Center" Text="{Binding Description}" Style="{StaticResource ParagraphText}" />
                    <TextBlock TextAlignment="Center" Text="{Binding URL}" Style="{StaticResource ParagraphText}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>