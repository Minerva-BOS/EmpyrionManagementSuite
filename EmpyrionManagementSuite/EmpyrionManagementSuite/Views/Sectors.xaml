<Page x:Class="EmpyrionManagementSuite.Views.Sectors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      DataContext="{Binding Source={StaticResource Locator}, Path=Sectors}"
      xmlns:local="clr-namespace:EmpyrionManagementSuite.Views"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="530"
      Title="Sectors">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215" />
            <ColumnDefinition Width="215" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="100,0,0,0">

            <!--// All Sectors //-->
            <Grid Grid.Row="0" Grid.Column="0">
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SectorsLabel}" Style="{StaticResource ControlLabel}" />
                    <ListBox ItemsSource="{Binding SectorsList}" Height="400" Width="205" />
                </StackPanel>
            </Grid>

            <!--// Sector Info //-->
            <Grid Grid.Row="0" Grid.Column="1">
            </Grid>
        </StackPanel>
    </Grid>
</Page>